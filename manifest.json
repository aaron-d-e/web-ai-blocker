{
  "manifest_version": 3,
  "name": "Monkey Lock",
  "version": "1.0",
  "description": "An on/off switch to toggle between study modes.",
  "action": {
    "default_popup": "popup.html"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules_1.json"
      }
    ]
  },
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "host_permissions": [
    "*://apple.com/*",
    "*://*.apple.com/*",
    "https://www.youtube.com/*",
    "*://*.chatgpt.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/acm_logo.png",
        "images/monkey-i-see.gif"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "js": [
        "content.js",
        "blocked.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle"
    }
  ]
}
