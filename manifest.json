{
  "manifest_version": 3,
  "name": "Monkey Lock",
  "version": "1.0",
  "description": "An extension to block yourself from using AI tools, eliminating the temptation while learning.",
  "icons": {
    "16": "images/monkey8.png",
    "48": "images/monkey8.png",
    "128": "images/monkey8.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules_1.json"
      }
    ]
  },
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "host_permissions": [
    "*://*.chatgpt.com/*",
    "*://*.claude.ai/*",
    "*://gemini.google.com/*",
    "*://openai.com/*",
    "*://*.perplexity.ai/*",
    "*://perplexity.ai/*",
    "*://ai.google/*",
    "*://copilot.microsoft.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/*",
        "blocked.html",
        "blocked.css",
        "blocked.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle"
    }
  ]
}
